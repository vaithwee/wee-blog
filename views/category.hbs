<header class="intro-header" style="background-image: url('/img/about-bg.jpg')">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="post-heading text-center">
                    <h1>Category</h1>
                </div>
            </div>
        </div>
    </div>
</header>
<div class="container">
    <div class="row">
        <div class="col-lg-6 col-lg-offset-3 col-md-4 col-md-offset-4 text-center">
            {{#each data}}
                <a href="category/{{_id}}"><h3>#{{name}}#</h3></a>
            {{/each}}
        </div>
    </div>
</div>
